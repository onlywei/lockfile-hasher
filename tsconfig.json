{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "declaration": true,
    "erasableSyntaxOnly": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rewriteRelativeImportExtensions": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2024"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
